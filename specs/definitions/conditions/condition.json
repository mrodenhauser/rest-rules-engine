{
  "type": "object",
  "properties": {
    "_id": {
      "type": "string",
      "format": "/^[a-f\\d]{24}$/i"
    },
    "name": {
      "type": "string"
    },
    "any": {
      "type": "array",
      "minItems": 1,
      "items": {
        "anyOf": [
          {
            "$ref": "./condition_criteria.json"
          },
          {
            "$ref": "#/components/schemas/condition"
          }
        ]
      }
    },
    "all": {
      "type": "array",
      "minItems": 1,
      "items": {
        "anyOf": [
          {
            "$ref": "./condition_criteria.json"
          },
          {
            "$ref": "#/components/schemas/condition"
          }
        ]
      }
    }
  },
  "oneOf": [
    {
      "required": [
        "all"
      ]
    },
    {
      "required": [
        "any"
      ]
    }
  ]
}
