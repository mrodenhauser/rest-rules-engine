      "error_list": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "evaluation_request": {
        "type": "object",
        "properties": {
          "rules": {
            "$ref": "#/components/schemas/rule_set"
          },
          "fact": {
            "type": "object"
          },
          "first_result_only": {
            "type": "boolean"
          }
        },
