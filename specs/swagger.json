                    {
                      "type": "string"
                    },
                    {
                      "type": "boolean"
                    },
                    {
                      "type": "array"
                    },
                    {
                      "type": "object"
                    }
                  ]
                }
              },
              "required": [
                "fact",
                "operator",
                "value"
              ]
            }
          }
        },
        "oneOf": [
          {
            "required": [
              "all"
            ]
          },
          {
            "required": [
              "any"
            ]
          }
        ]
      },
      "event": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string"
          },
          "params": {
