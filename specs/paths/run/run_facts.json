{
  "tags": [
    "run"
  ],
  "summary": "Runs an engine with supplied rule id, one or more facts, and flag indicating to return the first result only or not",
  "parameters": [
    {
      "in": "path",
      "name": "rule_set_id",
      "schema": {
        "type": "string",
        "pattern": "^[a-fA-F0-9]{24}$"
      },
      "required": true,
      "description": "Id of the ruleset you want to use for evaluation"
    }
  ],
  "requestBody": {
    "description": "Fact and flag for first result only",
    "required": true,
    "content": {
      "application/json": {
        "schema": {
          "$ref": "#/components/schemas/facts_run_request"
        }
      }
    }
  },
  "responses": {
    "400": {
      "description": "Bad Request",
      "content": {
        "application/json": {
          "schema": {
            "$ref": "#/components/schemas/error_list"
          }
        }
      }
    },
    "200": {
      "description": "Ok",
      "content": {
        "application/json": {
          "schema": {
            "oneOf": [
              {
                "type": "array",
                "minItems": 1,
                "items": {
                  "$ref": "#/components/schemas/fact_run_response"
                }
              },
              {
                "$ref": "#/components/schemas/fact_run_response"
              }
            ]
          }
        }
      }
    },
    "401": {
      "description": "Unauthorized"
    }
  }
}
